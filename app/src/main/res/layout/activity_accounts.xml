<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_accounts"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="k3.daybook.account.AccountsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/height_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/accounts_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_add"/>

        <Button
            android:id="@+id/accounts_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_reset"/>

    </LinearLayout>

</RelativeLayout>
