<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_vertical_home_item"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/margin_vertical_home_item"
    tools:context="k3.daybook.home.HomeActivity">

    <LinearLayout
        android:id="@+id/home_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/home_in_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/home_switch_off"
            android:textOn="@string/home_switch_on"
            android:theme="@android:style/Theme.Holo.Light"/>

        <EditText
            android:id="@+id/et_home_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_home_amount_needed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_money"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_break"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/home_usage"/>

            <RadioButton
                android:id="@+id/home_usage_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_usage_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_usage_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_usage_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_usage_5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <Button
                android:id="@+id/another_usage_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_break"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/home_another_page"/>

        </RadioGroup>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_break"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/home_payment"/>

            <RadioButton
                android:id="@+id/home_payment_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_payment_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_payment_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_payment_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <RadioButton
                android:id="@+id/home_payment_5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_setting_item"/>

            <Button
                android:id="@+id/another_payment_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_break"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/home_another_page"/>

        </RadioGroup>

    </LinearLayout>

    <ImageView
        android:id="@+id/home_analyze"
        android:layout_width="@dimen/size_home_icon"
        android:layout_height="@dimen/size_home_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_vertical_home_item"
        android:clickable="true"
        android:src="@mipmap/ic_analyze"/>

    <ImageView
        android:id="@+id/home_add"
        android:layout_width="@dimen/size_home_add"
        android:layout_height="@dimen/size_home_add"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/home_add_seletor"/>

    <ImageView
        android:id="@+id/home_setting"
        android:layout_width="@dimen/size_home_icon"
        android:layout_height="@dimen/size_home_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/margin_vertical_home_item"
        android:clickable="true"
        android:src="@mipmap/ic_setting"
        android:text="@string/home_setting"/>

</RelativeLayout>
