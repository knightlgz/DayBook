<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_footer_append"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_list_item"
        android:gravity="center"
        android:text="@string/tv_setting_add_more"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_setting_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/hint_setting_name_needed"
            android:inputType="text"
            android:maxLines="1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_setting_save"
            android:layout_width="@dimen/height_list_item"
            android:layout_height="@dimen/height_list_item"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_save"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>